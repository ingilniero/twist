<%= form_with model: [@book, @chapter, @note, @comment] do |f| %>
  <div class="comment_form">
    <strong>Comment on this note (Markdown enabled)</strong>
    <p>
      <% if current_user.author? %>
        <% if @note.completed? %>
          <%= f.submit "Reopen", :class => "reopen-button" %>
        <% else %>
          <%= f.submit "Accept", :class => "btn btn-primary", :tabindex => 2 %>
          <%= f.submit "Reject", :class => "btn btn-danger", :tabindex => 3 %>
        <% end %>
      <% end %>
    </p>

    <div class='form-group'>
      <%= f.label :text %>
      <%= f.text_area :text, class: "form-control" %>
    </p>

  </div>
  <p>
    <%= f.submit "Leave Comment", class: "btn btn-primary comment-button", :tabindex => 5 %>
  </p>
<% end %>
