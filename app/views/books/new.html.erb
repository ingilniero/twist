<div class='row'>
  <div class='col-md-8 content'>
    <h2>New Book</h2>

    <%= form_with @book do |f| %>
      <%= f.text_field :title %>
      <%= f.text_field :path, label: "GitHub Path" %>
      <%= f.text_field :blurb %>

      <%= f.submit "Add Book", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
